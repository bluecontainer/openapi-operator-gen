# Makefile for kubectl-petstore plugin

PLUGIN_NAME := kubectl-petstore
VERSION ?= $(shell git describe --tags --always --dirty 2>/dev/null || echo "dev")
COMMIT ?= $(shell git rev-parse --short HEAD 2>/dev/null || echo "none")
DATE ?= $(shell date -u +"%Y-%m-%dT%H:%M:%SZ")

LDFLAGS := -ldflags "-X main.version=$(VERSION) -X main.commit=$(COMMIT) -X main.date=$(DATE)"

.PHONY: all
all: build

.PHONY: build
build:
	go build $(LDFLAGS) -o bin/$(PLUGIN_NAME) .

.PHONY: install
install: build
	cp bin/$(PLUGIN_NAME) $(shell go env GOPATH)/bin/

.PHONY: uninstall
uninstall:
	rm -f $(shell go env GOPATH)/bin/$(PLUGIN_NAME)

.PHONY: test
test:
	go test -v ./...

.PHONY: clean
clean:
	rm -rf bin/ dist/

.PHONY: fmt
fmt:
	go fmt ./...

.PHONY: vet
vet:
	go vet ./...

.PHONY: tidy
tidy:
	go mod tidy

# Cross-platform release builds
.PHONY: release
release: release-darwin-amd64 release-darwin-arm64 release-linux-amd64 release-linux-arm64 release-windows-amd64

.PHONY: release-darwin-amd64
release-darwin-amd64:
	GOOS=darwin GOARCH=amd64 go build $(LDFLAGS) -o dist/$(PLUGIN_NAME)_darwin_amd64 .
	cd dist && tar -czvf $(PLUGIN_NAME)_darwin_amd64.tar.gz $(PLUGIN_NAME)_darwin_amd64

.PHONY: release-darwin-arm64
release-darwin-arm64:
	GOOS=darwin GOARCH=arm64 go build $(LDFLAGS) -o dist/$(PLUGIN_NAME)_darwin_arm64 .
	cd dist && tar -czvf $(PLUGIN_NAME)_darwin_arm64.tar.gz $(PLUGIN_NAME)_darwin_arm64

.PHONY: release-linux-amd64
release-linux-amd64:
	GOOS=linux GOARCH=amd64 go build $(LDFLAGS) -o dist/$(PLUGIN_NAME)_linux_amd64 .
	cd dist && tar -czvf $(PLUGIN_NAME)_linux_amd64.tar.gz $(PLUGIN_NAME)_linux_amd64

.PHONY: release-linux-arm64
release-linux-arm64:
	GOOS=linux GOARCH=arm64 go build $(LDFLAGS) -o dist/$(PLUGIN_NAME)_linux_arm64 .
	cd dist && tar -czvf $(PLUGIN_NAME)_linux_arm64.tar.gz $(PLUGIN_NAME)_linux_arm64

.PHONY: release-windows-amd64
release-windows-amd64:
	GOOS=windows GOARCH=amd64 go build $(LDFLAGS) -o dist/$(PLUGIN_NAME)_windows_amd64.exe .
