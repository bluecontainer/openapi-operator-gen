# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Target REST API Deployment and Service
# This deploys the REST API that the operator manages.
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ .AppName }}
  namespace: {{ .Namespace }}
  labels:
    app.kubernetes.io/name: {{ .AppName }}-api
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ .AppName }}
  template:
    metadata:
      labels:
        app: {{ .AppName }}
    spec:
      containers:
      - name: {{ .AppName }}
        image: {{ .TargetAPIImage }}
        ports:
        - containerPort: {{ .ContainerPort }}
{{- if .BasePath }}
        readinessProbe:
          httpGet:
            path: {{ .BasePath }}/openapi.json
            port: {{ .ContainerPort }}
          initialDelaySeconds: 10
          periodSeconds: 5
        livenessProbe:
          httpGet:
            path: {{ .BasePath }}/openapi.json
            port: {{ .ContainerPort }}
          initialDelaySeconds: 15
          periodSeconds: 10
{{- end }}
---
apiVersion: v1
kind: Service
metadata:
  name: {{ .AppName }}
  namespace: {{ .Namespace }}
  labels:
    app.kubernetes.io/name: {{ .AppName }}-api
spec:
  selector:
    app: {{ .AppName }}
  ports:
  - port: {{ .ContainerPort }}
    targetPort: {{ .ContainerPort }}
    protocol: TCP
