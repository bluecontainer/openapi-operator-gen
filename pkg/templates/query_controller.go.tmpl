			}
		} else if value.Kind() == reflect.Ptr {
			if !value.IsNil() {
				params.Set(jsonTag, fmt.Sprintf("%v", value.Elem().Interface()))
			}
		} else if !value.IsZero() {
			params.Set(jsonTag, fmt.Sprintf("%v", value.Interface()))
		}
	}

	if len(params) > 0 {
		queryURL += "?" + params.Encode()
	}

	return queryURL
}

