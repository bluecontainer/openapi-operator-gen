# Pause resource reconciliation (Docker execution)
- defaultTab: output
  description: |-
    Pause reconciliation for a resource or all resources of a kind.
    Paused resources will not be synced with the REST API.
    Runs kubectl plugin inside a Docker container.
    Uses: docker run ... kubectl {{ .PluginName }} pause {kind} {name}
  executionEnabled: true
  group: operations
  loglevel: INFO
  name: pause
  nodeFilterEditable: false
  options:
  - name: resource_kind
    description: "Resource kind (e.g., Pet, Order, User)"
    required: true
  - name: resource_name
    description: "Resource name (omit with --all)"
  - name: all
    description: "Pause all resources of this kind"
    enforced: true
    values:
    - 'true'
    - 'false'
    value: 'false'
  - name: reason
    description: "Reason for pausing"
  - name: namespace
    description: "Kubernetes namespace (defaults to project setting)"
    value: '${globals.namespace}'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator-docker/k8s-token
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Pause resource reconciliation"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        IMAGE="${PLUGIN_RUNNER_IMAGE:-{{ .PluginName }}-kubectl-plugin:latest}"
        NET="${DOCKER_NETWORK:-host}"
        cmd="docker run --rm --network $NET $IMAGE {{ .PluginName }} pause $RD_OPTION_RESOURCE_KIND"
        [ -n "$RD_OPTION_RESOURCE_NAME" ] && cmd="$cmd $RD_OPTION_RESOURCE_NAME"
        [ "$RD_OPTION_ALL" = "true" ] && cmd="$cmd --all"
        [ -n "$RD_OPTION_REASON" ] && cmd="$cmd --reason=\"$RD_OPTION_REASON\""
        _NS="${RD_OPTION_NAMESPACE:-$RD_GLOBALS_NAMESPACE}"
        [ -n "$_NS" ] && cmd="$cmd -n $_NS"
        cmd="$cmd --server=\"$RD_GLOBALS_K8S_URL\" --token=\"$RD_OPTION_K8S_TOKEN\" --insecure-skip-tls-verify"
        eval $cmd
    keepgoing: false
    strategy: node-first
