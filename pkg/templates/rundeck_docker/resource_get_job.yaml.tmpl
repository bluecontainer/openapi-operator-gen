# List {{ .Kind }} resources (Docker execution)
- defaultTab: output
  description: |-
    List {{ .Kind }} resources managed by the Kubernetes operator.
    Runs kubectl plugin inside a Docker container.
    Uses: docker run ... kubectl {{ .PluginName }} get {{ .Plural }}
  executionEnabled: true
  group: resources/{{ .KindLower }}
  loglevel: INFO
  name: get-{{ .Plural }}
  nodeFilterEditable: false
  options:
  - name: namespace
    description: "Kubernetes namespace (default: from kubeconfig)"
  - name: output
    description: "Output format"
    enforced: true
    values:
    - 'table'
    - 'wide'
    - 'json'
    - 'yaml'
    value: 'table'
  scheduleEnabled: true
  sequence:
    commands:
    - description: "List {{ .Kind }} resources"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        IMAGE="${PLUGIN_RUNNER_IMAGE:-{{ .PluginName }}-kubectl-plugin:latest}"
        NET="${DOCKER_NETWORK:-host}"
        KUBE_VOL="${DOCKER_KUBE_VOLUME:-}"
        KUBE="${KUBECONFIG:-/root/.kube/config}"
        if [ -n "$KUBE_VOL" ]; then
          VOL_ARGS="-v $KUBE_VOL:/kube:ro -e KUBECONFIG=/kube/kube/config"
        else
          VOL_ARGS="-v $KUBE:/root/.kube/config:ro"
        fi
        cmd="docker run --rm --network $NET $VOL_ARGS $IMAGE {{ .PluginName }} get {{ .Plural }}"
        [ -n "$RD_OPTION_NAMESPACE" ] && cmd="$cmd -n $RD_OPTION_NAMESPACE"
        [ -n "$RD_OPTION_OUTPUT" ] && cmd="$cmd -o $RD_OPTION_OUTPUT"
        eval $cmd
    keepgoing: false
    strategy: node-first
