# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Describe a {{ .Kind }} resource (Docker execution)
- defaultTab: output
  description: |-
    Show detailed information about a {{ .Kind }} resource.
    Runs kubectl plugin inside a Docker container.
    Uses: docker run ... kubectl {{ .PluginName }} describe {{ .KindLower }}
  executionEnabled: true
  group: resources/{{ .KindLower }}
  loglevel: INFO
  name: describe-{{ .KindLower }}
  nodeFilterEditable: false
  options:
  - name: resource_name
    description: "Name of the {{ .Kind }} custom resource"
    required: true
  - name: namespace
    description: "Kubernetes namespace (defaults to project setting)"
    value: '${globals.namespace}'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/${node.clusterTokenSuffix}
    hidden: true
  - name: k8s_token_default
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator-docker/k8s-token
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Describe {{ .Kind }} resource"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        IMAGE="${PLUGIN_RUNNER_IMAGE:-{{ .PluginName }}-kubectl-plugin:latest}"
        NET="${DOCKER_NETWORK:-host}"
        cmd="docker run --rm --network $NET $IMAGE {{ .PluginName }} describe {{ .KindLower }} $RD_OPTION_RESOURCE_NAME"
        _NS="${RD_OPTION_NAMESPACE:-$RD_GLOBALS_NAMESPACE}"
        [ -n "$_NS" ] && cmd="$cmd -n $_NS"
        # Use cluster URL from node attribute if available, fall back to project global
        _CLUSTER_URL="@node.clusterUrl@"
        [ -z "$_CLUSTER_URL" ] || [ "$_CLUSTER_URL" = "@""node.clusterUrl""@" ] && _CLUSTER_URL="$RD_GLOBALS_K8S_URL"
        _K8S_TOKEN="${RD_OPTION_K8S_TOKEN:-$RD_OPTION_K8S_TOKEN_DEFAULT}"
        cmd="$cmd --server=\"$_CLUSTER_URL\" --token=\"$_K8S_TOKEN\" --insecure-skip-tls-verify"
        eval $cmd
    keepgoing: false
    strategy: node-first
