# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Describe a {{ .Kind }} resource (Docker execution)
- defaultTab: output
  description: |-
    Show detailed information about a {{ .Kind }} resource.
    Runs kubectl plugin inside a Docker container.
    Uses: docker run ... kubectl {{ .PluginName }} describe {{ .KindLower }}
  executionEnabled: true
  group: resources/{{ .KindLower }}
  loglevel: INFO
  name: describe-{{ .KindLower }}
  nodeFilterEditable: false
  options:
  - name: resource_name
    description: "Name of the {{ .Kind }} custom resource"
    required: true
  - name: namespace
    description: "Kubernetes namespace (default: from kubeconfig)"
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Describe {{ .Kind }} resource"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        IMAGE="${PLUGIN_RUNNER_IMAGE:-{{ .PluginName }}-kubectl-plugin:latest}"
        NET="${DOCKER_NETWORK:-host}"
        KUBE_VOL="${DOCKER_KUBE_VOLUME:-}"
        KUBE="${KUBECONFIG:-/root/.kube/config}"
        if [ -n "$KUBE_VOL" ]; then
          VOL_ARGS="-v $KUBE_VOL:/kube:ro -e KUBECONFIG=/kube/kube/config"
        else
          VOL_ARGS="-v $KUBE:/root/.kube/config:ro"
        fi
        cmd="docker run --rm --network $NET $VOL_ARGS $IMAGE {{ .PluginName }} describe {{ .KindLower }} $RD_OPTION_RESOURCE_NAME"
        [ -n "$RD_OPTION_NAMESPACE" ] && cmd="$cmd -n $RD_OPTION_NAMESPACE"
        eval $cmd
    keepgoing: false
    strategy: node-first
