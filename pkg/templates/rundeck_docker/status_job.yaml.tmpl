# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Operator status overview (Docker execution)
- defaultTab: output
  description: |-
    Show status overview for the {{ .APIName }} operator.
    Displays all managed resources with their current state.
    Runs kubectl plugin inside a Docker container.
    Uses: docker run ... kubectl {{ .PluginName }} status
  executionEnabled: true
  group: operations
  loglevel: INFO
  name: status
  nodeFilterEditable: false
  options:
  - name: namespace
    description: "Kubernetes namespace (default: from kubeconfig)"
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Get operator status"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        IMAGE="${PLUGIN_RUNNER_IMAGE:-{{ .PluginName }}-kubectl-plugin:latest}"
        NET="${DOCKER_NETWORK:-host}"
        KUBE_VOL="${DOCKER_KUBE_VOLUME:-}"
        KUBE="${KUBECONFIG:-/root/.kube/config}"
        if [ -n "$KUBE_VOL" ]; then
          VOL_ARGS="-v $KUBE_VOL:/kube:ro -e KUBECONFIG=/kube/kube/config"
        else
          VOL_ARGS="-v $KUBE:/root/.kube/config:ro"
        fi
        cmd="docker run --rm --network $NET $VOL_ARGS $IMAGE {{ .PluginName }} status"
        [ -n "$RD_OPTION_NAMESPACE" ] && cmd="$cmd -n $RD_OPTION_NAMESPACE"
        eval $cmd
    keepgoing: false
    strategy: node-first
