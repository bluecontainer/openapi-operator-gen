# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Execute {{ .Kind }} action (Docker execution)
- defaultTab: output
  description: |-
    Execute a {{ .Kind }} action via the Kubernetes operator.
    Runs kubectl plugin inside a Docker container.
    Uses: docker run ... kubectl {{ .PluginName }} action {{ .KindLower }}
  executionEnabled: true
  group: actions
  loglevel: INFO
  name: {{ .KindLower }}
  nodeFilterEditable: false
  options:
  - name: resource_name
    description: "Name for the action CR (auto-generated if empty)"
{{- range .Fields }}
  - name: {{ .Name }}
    description: "{{ .Description }}{{ if .IsNested }} (JSON format){{ end }}"
{{- if .Required }}
    required: true
{{- end }}
{{- if .Enum }}
    enforced: true
    values:
{{- range .Enum }}
    - '{{ . }}'
{{- end }}
{{- end }}
{{- end }}
  - name: namespace
    description: "Kubernetes namespace"
  - name: dry_run
    description: "Preview the action resource without creating it"
    enforced: true
    values:
    - 'true'
    - 'false'
    value: 'false'
  - name: wait
    description: "Wait for action completion"
    enforced: true
    values:
    - 'true'
    - 'false'
    value: 'true'
  - name: timeout
    description: "Timeout for --wait (e.g., 60s, 5m)"
    value: '60s'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator-docker/k8s-token
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Execute {{ .Kind }} action"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        IMAGE="${PLUGIN_RUNNER_IMAGE:-{{ .PluginName }}-kubectl-plugin:latest}"
        NET="${DOCKER_NETWORK:-host}"
        cmd="docker run --rm --network $NET $IMAGE {{ .PluginName }} action {{ .KindLower }}"
        [ -n "$RD_OPTION_RESOURCE_NAME" ] && cmd="$cmd --name=$RD_OPTION_RESOURCE_NAME"
{{- range .Fields }}
        cmd="$cmd --{{ .Name }}=\"$RD_OPTION_{{ upper .Name }}\""
{{- end }}
        [ -n "$RD_OPTION_NAMESPACE" ] && cmd="$cmd -n $RD_OPTION_NAMESPACE"
        cmd="$cmd --dry-run=$RD_OPTION_DRY_RUN --wait=$RD_OPTION_WAIT --timeout=$RD_OPTION_TIMEOUT"
        cmd="$cmd --server=\"$RD_GLOBALS_K8S_URL\" --token=\"$RD_OPTION_K8S_TOKEN\" --insecure-skip-tls-verify"
        eval $cmd
    keepgoing: false
    strategy: node-first
