# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# List {{ .Kind }} resources (Kubernetes pod execution)
- defaultTab: output
  description: |-
    List {{ .Kind }} resources managed by the Kubernetes operator.
    Runs kubectl plugin inside an ephemeral Kubernetes pod.
    Uses: kubectl run ... -- {{ .PluginName }} get {{ .Plural }}
  executionEnabled: true
  group: resources/{{ .KindLower }}
  loglevel: INFO
  name: get-{{ .Plural }}
  nodeFilterEditable: false
  options:
  - name: namespace
    description: "Kubernetes namespace (defaults to project setting)"
    value: '${globals.namespace}'
  - name: output
    description: "Output format"
    enforced: true
    values:
    - 'table'
    - 'wide'
    - 'json'
    - 'yaml'
    value: 'table'
  - name: state
    description: "Filter by resource state"
    enforced: true
    values:
    - 'Synced'
    - 'Failed'
    - 'Pending'
  - name: drift
    description: "Show only resources with drift"
    enforced: true
    values:
    - 'true'
    - 'false'
    value: 'false'
  - name: selector
    description: "Label selector (e.g., app=myapp,env=prod)"
  - name: all_namespaces
    description: "List across all namespaces"
    enforced: true
    values:
    - 'true'
    - 'false'
    value: 'false'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator-k8s/k8s-token
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "List {{ .Kind }} resources"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        IMAGE="${PLUGIN_RUNNER_IMAGE:-{{ .PluginName }}-kubectl-plugin:latest}"
        PLUGIN_NS="${PLUGIN_NAMESPACE:-{{ .Namespace }}}"
        SA="${PLUGIN_SERVICE_ACCOUNT:-{{ .PluginName }}-plugin-runner}"
        POD="plugin-run-$(date +%s)-$RANDOM"
        cmd="kubectl --server=\"$RD_GLOBALS_K8S_URL\" --token=\"$RD_OPTION_K8S_TOKEN\" --insecure-skip-tls-verify"
        cmd="$cmd run $POD --image=$IMAGE --restart=Never --rm -i --quiet --image-pull-policy=Never"
        cmd="$cmd -n $PLUGIN_NS"
        cmd="$cmd --overrides='{\"spec\":{\"serviceAccountName\":\"$SA\"}}'"
        cmd="$cmd -- {{ .PluginName }} get {{ .Plural }}"
        _NS="${RD_OPTION_NAMESPACE:-$RD_GLOBALS_NAMESPACE}"
        [ -n "$_NS" ] && cmd="$cmd -n $_NS"
        [ -n "$RD_OPTION_OUTPUT" ] && cmd="$cmd -o $RD_OPTION_OUTPUT"
        [ -n "$RD_OPTION_STATE" ] && cmd="$cmd --state=$RD_OPTION_STATE"
        [ "$RD_OPTION_DRIFT" = "true" ] && cmd="$cmd --drift"
        [ -n "$RD_OPTION_SELECTOR" ] && cmd="$cmd --selector=\"$RD_OPTION_SELECTOR\""
        [ "$RD_OPTION_ALL_NAMESPACES" = "true" ] && cmd="$cmd --all-namespaces"
        eval $cmd
    keepgoing: false
    strategy: node-first
