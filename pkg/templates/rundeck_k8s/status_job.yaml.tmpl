# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Operator status overview (Kubernetes pod execution)
- defaultTab: output
  description: |-
    Show status overview for the {{ .APIName }} operator.
    Displays all managed resources with their current state.
    Runs kubectl plugin inside an ephemeral Kubernetes pod.
    Uses: kubectl run ... -- {{ .PluginName }} status
  executionEnabled: true
  group: operations
  loglevel: INFO
  name: status
  nodeFilterEditable: false
  options:
  - name: namespace
    description: "Kubernetes namespace (defaults to project setting)"
    value: '${globals.namespace}'
  - name: output
    description: "Output format"
    enforced: true
    values:
    - 'table'
    - 'json'
    - 'yaml'
    value: 'json'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/${node.clusterTokenSuffix}
    hidden: true
  - name: k8s_token_default
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator-k8s/k8s-token
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Get operator status"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        IMAGE="${PLUGIN_RUNNER_IMAGE:-{{ .PluginName }}-kubectl-plugin:latest}"
        PLUGIN_NS="${PLUGIN_NAMESPACE:-{{ .Namespace }}}"
        SA="${PLUGIN_SERVICE_ACCOUNT:-{{ .PluginName }}-plugin-runner}"
        POD="plugin-run-$(date +%s)-$RANDOM"
        # Use cluster URL from node attribute if available, fall back to project global
        _CLUSTER_URL="@node.clusterUrl@"
        [ -z "$_CLUSTER_URL" ] || [ "$_CLUSTER_URL" = "@""node.clusterUrl""@" ] && _CLUSTER_URL="$RD_GLOBALS_K8S_URL"
        _K8S_TOKEN="${RD_OPTION_K8S_TOKEN:-$RD_OPTION_K8S_TOKEN_DEFAULT}"
        cmd="kubectl --server=\"$_CLUSTER_URL\" --token=\"$_K8S_TOKEN\" --insecure-skip-tls-verify"
        cmd="$cmd run $POD --image=$IMAGE --restart=Never --rm -i --quiet --image-pull-policy=IfNotPresent"
        cmd="$cmd -n $PLUGIN_NS"
        cmd="$cmd --overrides='{\"spec\":{\"serviceAccountName\":\"$SA\"}}'"
        cmd="$cmd -- {{ .PluginName }} status"
        _NS="${RD_OPTION_NAMESPACE:-$RD_GLOBALS_NAMESPACE}"
        [ -n "$_NS" ] && cmd="$cmd -n $_NS"
        [ -n "$RD_OPTION_OUTPUT" ] && cmd="$cmd --output $RD_OPTION_OUTPUT"
        eval $cmd
    keepgoing: false
    strategy: node-first
