# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Create a {{ .Kind }} resource via the Kubernetes operator (Kubernetes pod execution)
- defaultTab: output
  description: |-
    Create a {{ .Kind }} resource via the Kubernetes operator.
    Runs kubectl plugin inside an ephemeral Kubernetes pod.
    Uses: kubectl run ... -- {{ .PluginName }} create {{ .KindLower }}
  executionEnabled: true
  group: resources/{{ .KindLower }}
  loglevel: INFO
  name: create-{{ .KindLower }}
  nodeFilterEditable: false
  options:
  - name: resource_name
    description: "Name for the CR (auto-generated if empty)"
{{- range .Fields }}
  - name: {{ .Name }}
    description: "{{ .Description }}{{ if .IsNested }} (JSON format){{ end }}"
{{- if .Required }}
    required: true
{{- end }}
{{- if .Enum }}
    enforced: true
    values:
{{- range .Enum }}
    - '{{ . }}'
{{- end }}
{{- end }}
{{- end }}
  - name: namespace
    description: "Kubernetes namespace"
  - name: dry_run
    description: "Preview the resource without creating it"
    enforced: true
    values:
    - 'true'
    - 'false'
    value: 'false'
  - name: no_wait
    description: "Don't wait for the resource to sync"
    enforced: true
    values:
    - 'true'
    - 'false'
    value: 'false'
  - name: timeout
    description: "Timeout for --wait (e.g., 60s, 5m)"
    value: '60s'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator-k8s/k8s-token
    hidden: true
  - name: k8s_url
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator-k8s/k8s-url
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Create {{ .Kind }} resource"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        IMAGE="${PLUGIN_RUNNER_IMAGE:-{{ .PluginName }}-kubectl-plugin:latest}"
        PLUGIN_NS="${PLUGIN_NAMESPACE:-{{ .Namespace }}}"
        SA="${PLUGIN_SERVICE_ACCOUNT:-{{ .PluginName }}-plugin-runner}"
        POD="plugin-run-$(date +%s)-$RANDOM"
        cmd="kubectl --server=\"$RD_OPTION_K8S_URL\" --token=\"$RD_OPTION_K8S_TOKEN\" --insecure-skip-tls-verify"
        cmd="$cmd run $POD --image=$IMAGE --restart=Never --rm -i --quiet --image-pull-policy=Never"
        cmd="$cmd -n $PLUGIN_NS"
        cmd="$cmd --overrides='{\"spec\":{\"serviceAccountName\":\"$SA\"}}'"
        cmd="$cmd -- {{ .PluginName }} create {{ .KindLower }}"
        [ -n "$RD_OPTION_RESOURCE_NAME" ] && cmd="$cmd --cr-name=$RD_OPTION_RESOURCE_NAME"
{{- range .Fields }}
        cmd="$cmd --{{ .Name }}=\"$RD_OPTION_{{ upper .Name }}\""
{{- end }}
        [ -n "$RD_OPTION_NAMESPACE" ] && cmd="$cmd -n $RD_OPTION_NAMESPACE"
        cmd="$cmd --dry-run=$RD_OPTION_DRY_RUN --timeout=$RD_OPTION_TIMEOUT"
        [ "$RD_OPTION_NO_WAIT" = "true" ] && cmd="$cmd --no-wait"
        eval $cmd
    keepgoing: false
    strategy: node-first
