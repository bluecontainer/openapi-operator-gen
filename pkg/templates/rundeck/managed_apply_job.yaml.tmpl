# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Apply managed {{ .Kind }} "{{ .CRName }}" (script execution)
- defaultTab: output
  description: |-
    Apply managed {{ .Kind }} "{{ .CRName }}" to the cluster.
    Creates the resource if it doesn't exist, updates if it does.
    Uses: kubectl apply -f - (with embedded CR YAML)
  executionEnabled: true
  group: managed/{{ .KindLower }}-{{ .CRName }}
  loglevel: INFO
  name: apply-{{ .KindLower }}-{{ .CRName }}
  nodeFilterEditable: false
  options:
  - name: namespace
    description: "Kubernetes namespace (defaults to project setting, overrides metadata.namespace)"
    value: '${globals.namespace}'
  - name: dry_run
    description: "Preview without applying"
    enforced: true
    values:
    - 'true'
    - 'false'
    value: 'false'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/${node.clusterTokenSuffix}
    hidden: true
  - name: k8s_token_default
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator/k8s-token
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Apply {{ .Kind }} {{ .CRName }}"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        cat <<'CRYAML' > /tmp/managed-cr.yaml
{{ .CRYaml }}
        CRYAML
        cmd="kubectl apply -f /tmp/managed-cr.yaml"
        _NS="${RD_OPTION_NAMESPACE:-$RD_GLOBALS_NAMESPACE}"
        [ -n "$_NS" ] && cmd="$cmd -n $_NS"
        [ "$RD_OPTION_DRY_RUN" = "true" ] && cmd="$cmd --dry-run=client"
        # Use cluster URL from node attribute if available, fall back to project global
        _CLUSTER_URL="@node.clusterUrl@"
        [ -z "$_CLUSTER_URL" ] || [ "$_CLUSTER_URL" = "@""node.clusterUrl""@" ] && _CLUSTER_URL="$RD_GLOBALS_K8S_URL"
        _K8S_TOKEN="${RD_OPTION_K8S_TOKEN:-$RD_OPTION_K8S_TOKEN_DEFAULT}"
        cmd="$cmd --server=\"$_CLUSTER_URL\" --token=\"$_K8S_TOKEN\" --insecure-skip-tls-verify"
        eval $cmd
        rm -f /tmp/managed-cr.yaml
    keepgoing: false
    strategy: node-first
