# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Patch managed {{ .Kind }} "{{ .CRName }}" (script execution)
- defaultTab: output
  description: |-
    Patch managed {{ .Kind }} "{{ .CRName }}" with a JSON merge patch.
    Example patch: {"spec":{"paused":true}}
    Uses: kubectl patch {{ .KindLower }} {{ .CRName }} --type=merge -p '...'
  executionEnabled: true
  group: managed/{{ .KindLower }}-{{ .CRName }}
  loglevel: INFO
  name: patch-{{ .KindLower }}-{{ .CRName }}
  nodeFilterEditable: false
  options:
  - name: patch_json
    description: "JSON merge patch (e.g., {\"spec\":{\"paused\":true}})"
    required: true
  - name: namespace
    description: "Kubernetes namespace (defaults to project setting)"
    value: '${globals.namespace}'
  - name: dry_run
    description: "Preview without applying"
    enforced: true
    values:
    - 'true'
    - 'false'
    value: 'false'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator/k8s-token
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Patch {{ .Kind }} {{ .CRName }}"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        cmd="kubectl patch {{ .KindLower }} {{ .CRName }} --type=merge -p '$RD_OPTION_PATCH_JSON'"
        _NS="${RD_OPTION_NAMESPACE:-$RD_GLOBALS_NAMESPACE}"
        [ -n "$_NS" ] && cmd="$cmd -n $_NS"
        [ "$RD_OPTION_DRY_RUN" = "true" ] && cmd="$cmd --dry-run=client"
        cmd="$cmd --server=\"$RD_GLOBALS_K8S_URL\" --token=\"$RD_OPTION_K8S_TOKEN\" --insecure-skip-tls-verify"
        eval $cmd
    keepgoing: false
    strategy: node-first
