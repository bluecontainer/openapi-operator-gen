# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Drift detection report
- defaultTab: output
  description: |-
    Detect drift between Kubernetes resources and the REST API.
    Shows resources where the desired state differs from actual state.
    Uses: kubectl {{ .PluginName }} drift
  executionEnabled: true
  group: operations
  loglevel: INFO
  name: drift
  nodeFilterEditable: false
  options:
  - name: namespace
    description: "Kubernetes namespace"
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator/k8s-token
    hidden: true
  - name: k8s_url
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator/k8s-url
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Run drift detection"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        cmd="kubectl {{ .PluginName }} drift"
        [ -n "$RD_OPTION_NAMESPACE" ] && cmd="$cmd -n $RD_OPTION_NAMESPACE"
        cmd="$cmd --server=\"$RD_OPTION_K8S_URL\" --token=\"$RD_OPTION_K8S_TOKEN\" --insecure-skip-tls-verify"
        eval $cmd
    keepgoing: false
    strategy: node-first
