# Delete managed {{ .Kind }} "{{ .CRName }}" (script execution)
- defaultTab: output
  description: |-
    Delete managed {{ .Kind }} "{{ .CRName }}" from the cluster.
    Uses: kubectl delete {{ .KindLower }} {{ .CRName }}
  executionEnabled: true
  group: managed/{{ .KindLower }}-{{ .CRName }}
  loglevel: INFO
  name: delete-{{ .KindLower }}-{{ .CRName }}
  nodeFilterEditable: false
  options:
  - name: namespace
    description: "Kubernetes namespace (defaults to project setting)"
    value: '${globals.namespace}'
  - name: force
    description: "Force immediate deletion"
    enforced: true
    values:
    - 'true'
    - 'false'
    value: 'false'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/${node.clusterTokenSuffix}
    hidden: true
  - name: k8s_token_default
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator/k8s-token
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Delete {{ .Kind }} {{ .CRName }}"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        cmd="kubectl delete {{ .KindLower }} {{ .CRName }}"
        _NS="${RD_OPTION_NAMESPACE:-$RD_GLOBALS_NAMESPACE}"
        [ -n "$_NS" ] && cmd="$cmd -n $_NS"
        [ "$RD_OPTION_FORCE" = "true" ] && cmd="$cmd --force --grace-period=0"
        # Use cluster URL from node attribute if available, fall back to project global
        _CLUSTER_URL="@node.clusterUrl@"
        [ -z "$_CLUSTER_URL" ] || [ "$_CLUSTER_URL" = "@""node.clusterUrl""@" ] && _CLUSTER_URL="$RD_GLOBALS_K8S_URL"
        _K8S_TOKEN="${RD_OPTION_K8S_TOKEN:-$RD_OPTION_K8S_TOKEN_DEFAULT}"
        cmd="$cmd --server=\"$_CLUSTER_URL\" --token=\"$_K8S_TOKEN\" --insecure-skip-tls-verify"
        eval $cmd
    keepgoing: false
    strategy: node-first
