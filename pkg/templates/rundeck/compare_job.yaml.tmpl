# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Compare a resource
- defaultTab: output
  description: |-
    Compare a Kubernetes resource with the REST API state.
    Shows field-by-field differences between desired and actual state.
    Uses: kubectl {{ .PluginName }} compare
  executionEnabled: true
  group: operations
  loglevel: INFO
  name: compare
  nodeFilterEditable: false
  options:
  - name: resource_kind
    description: "Resource kind (e.g., Pet, Order, User)"
    required: true
  - name: resource_name
    description: "Resource name"
    required: true
  - name: field
    description: "Compare a specific field"
  - name: output
    description: "Output format"
    enforced: true
    values:
    - 'table'
    - 'json'
    - 'yaml'
    value: 'json'
  - name: namespace
    description: "Kubernetes namespace (defaults to project setting)"
    value: '${globals.namespace}'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator/k8s-token
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Compare resource with REST API"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        cmd="kubectl {{ .PluginName }} compare $RD_OPTION_RESOURCE_KIND $RD_OPTION_RESOURCE_NAME"
        [ -n "$RD_OPTION_FIELD" ] && cmd="$cmd --field=\"$RD_OPTION_FIELD\""
        [ -n "$RD_OPTION_OUTPUT" ] && cmd="$cmd --output $RD_OPTION_OUTPUT"
        _NS="${RD_OPTION_NAMESPACE:-$RD_GLOBALS_NAMESPACE}"
        [ -n "$_NS" ] && cmd="$cmd -n $_NS"
        cmd="$cmd --server=\"$RD_GLOBALS_K8S_URL\" --token=\"$RD_OPTION_K8S_TOKEN\" --insecure-skip-tls-verify"
        eval $cmd
    keepgoing: false
    strategy: node-first
