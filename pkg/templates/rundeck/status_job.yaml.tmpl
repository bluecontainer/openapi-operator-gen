# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Operator status overview
- defaultTab: output
  description: |-
    Show status overview for the {{ .APIName }} operator.
    Displays all managed resources with their current state.
    Uses: kubectl {{ .PluginName }} status
  executionEnabled: true
  group: operations
  loglevel: INFO
  name: status
  nodeFilterEditable: false
  options:
  - name: namespace
    description: "Kubernetes namespace"
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator/k8s-token
    hidden: true
  - name: k8s_url
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator/k8s-url
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Get operator status"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        cmd="kubectl {{ .PluginName }} status"
        [ -n "$RD_OPTION_NAMESPACE" ] && cmd="$cmd -n $RD_OPTION_NAMESPACE"
        cmd="$cmd --server=\"$RD_OPTION_K8S_URL\" --token=\"$RD_OPTION_K8S_TOKEN\" --insecure-skip-tls-verify"
        eval $cmd
    keepgoing: false
    strategy: node-first
