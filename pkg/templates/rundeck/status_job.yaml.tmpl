# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Operator status overview
- defaultTab: output
  description: |-
    Show status overview for the {{ .APIName }} operator.
    Displays all managed resources with their current state.
    Uses: kubectl {{ .PluginName }} status
  executionEnabled: true
  group: operations
  loglevel: INFO
  name: status
  nodeFilterEditable: false
  options:
  - name: namespace
    description: "Kubernetes namespace (defaults to project setting)"
    value: '${globals.namespace}'
  - name: output
    description: "Output format"
    enforced: true
    values:
    - 'table'
    - 'json'
    - 'yaml'
    value: 'json'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator/k8s-token
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Get operator status"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        cmd="kubectl {{ .PluginName }} status"
        _NS="${RD_OPTION_NAMESPACE:-$RD_GLOBALS_NAMESPACE}"
        [ -n "$_NS" ] && cmd="$cmd -n $_NS"
        [ -n "$RD_OPTION_OUTPUT" ] && cmd="$cmd --output $RD_OPTION_OUTPUT"
        cmd="$cmd --server=\"$RD_GLOBALS_K8S_URL\" --token=\"$RD_OPTION_K8S_TOKEN\" --insecure-skip-tls-verify"
        eval $cmd
    keepgoing: false
    strategy: node-first
