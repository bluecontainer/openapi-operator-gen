# Generated by openapi-operator-gen {{ .GeneratorVersion }}
# Describe a {{ .Kind }} resource
- defaultTab: output
  description: |-
    Show detailed information about a {{ .Kind }} resource.
    Uses: kubectl {{ .PluginName }} describe {{ .KindLower }}
  executionEnabled: true
  group: resources/{{ .KindLower }}
  loglevel: INFO
  name: describe-{{ .KindLower }}
  nodeFilterEditable: false
  options:
  - name: resource_name
    description: "Name of the {{ .Kind }} custom resource"
    required: true
  - name: namespace
    description: "Kubernetes namespace (defaults to project setting)"
    value: '${globals.namespace}'
  - name: k8s_token
    secure: true
    valueExposed: true
    storagePath: keys/project/{{ .PluginName }}-operator/k8s-token
    hidden: true
  scheduleEnabled: true
  sequence:
    commands:
    - description: "Describe {{ .Kind }} resource"
      scriptInterpreter: /bin/bash
      script: |-
        set -e
        cmd="kubectl {{ .PluginName }} describe {{ .KindLower }} $RD_OPTION_RESOURCE_NAME"
        _NS="${RD_OPTION_NAMESPACE:-$RD_GLOBALS_NAMESPACE}"
        [ -n "$_NS" ] && cmd="$cmd -n $_NS"
        cmd="$cmd --server=\"$RD_GLOBALS_K8S_URL\" --token=\"$RD_OPTION_K8S_TOKEN\" --insecure-skip-tls-verify"
        eval $cmd
    keepgoing: false
    strategy: node-first
